{% extends 'base.html.twig' %}

{% block title %}Gestionnaire de Compte{% endblock %}

{% block body %}
    <div id="mail"></div>

    {% if is_granted('ROLE_ADMIN') %}
        <h1>Manage Your Account</h1>
        <table class="table striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Role</th>
                <th>Info</th>
            </tr>
            </thead>
            <tbody>
            {% for a in user %}
                <tr>
                    <td>{{a.id}}</td>
                    <td>{{a.email}}</td>
                    <td>
                        {% for b in a.roles %}
                            {{ b }}
                        {% endfor %}
                    </td>
                    <td>A voir</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
